<%= form_with url: "/applications/", method: :post, local:true do |form| %>
<p><%= form.label :name, "Name:"  %>
<%= form.text_field :name %></p>
<p><%= form.label :address, "Address:"  %>
<%= form.text_field :address %></p>
<p><%= form.label :city, "City:"  %>
<%= form.text_field :city %></p>
<p><%= form.label :state, "State:"  %>
<%= form.text_field :state %></p>
<p><%= form.label :zipcode, "Zipcode:"  %>
<%= form.text_field :zipcode %></p>
<%= form.hidden_field :description, :value => "No Description" %>
<%= form.hidden_field :status, :value => "In Progress" %>
<%= form.submit "Submit" %>
<% end %>
